  .banner-area {
    background: url(<%= asset_path 'bgImg/slider.png' %>) no-repeat center center/cover;
  }
  .relative{
    position: relative;
  }
  .banner-area .overlay-bg {
    opacity: 0.3;
    background-color: #7f3f3b;

  }
  .overlay {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
  }
