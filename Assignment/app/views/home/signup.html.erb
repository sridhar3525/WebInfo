        <div class="overlay overlay-bg"></div>
        <div class="container">
          <div class="row fullscreen align-items-center justify-content-center" style="height: 915px;">
            <div class="banner-content col-lg-10 col-md-12" style="color: floralwhite">

              <%= form_tag "/home/register", method: 'POST' do%>
                <div class = "fields">
                  <table>
                    <tr>
                      <td>Username</td>
                      <td><%= text_field_tag(name ="username") %></td>
                    </tr>
                    <tr>
                      <td>EmailAddress</td>
                      <td><%= email_field_tag(name ="emailAddress") %></td>
                    </tr>
                    <tr>
                      <td>Password</td>
                      <td><%= password_field_tag(name="password") %></td>
                    </tr>
                    <tr>
                      <td><%= submit_tag("SignUp")  %></td>
                      <td><%= button_tag(value="Cancel") %></td>
                    </tr>
                  </table>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      </section>
