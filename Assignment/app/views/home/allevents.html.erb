<html>
<head>
  <title></title>
  <%= stylesheet_link_tag "/HomeCSS/bootstrap.css" %>
  <style>
    a#allevents{
      background-color: deepskyblue;
      color:darkblue;
    }
    #midDiv{
      left: 0px;
      float: left;
      position: absolute;
      height: auto;
    }

    .container#mainHead {
      background-color: steelblue;
      margin: 0px;
      width: 100%;
      max-width: 100%;
      color: floralwhite;
    }
  </style>
</head>
<body>


<div class="container" id="mainHead" >
  <div class="row">
    <div class="col-sm-7" id="title_page"> <h1>All Events Page</h1></div>
    <div class="col-sm-5">  <%= render 'mainheader' %> </div>
  </div>
</div>
<%= render 'header' %>
<div class="container" id="midDiv">
  <div class="row">
    <div class="col-sm-2" style="background-image:url(<%= asset_path 'bgImg/background3.jpg' %>);height: 100vh">
      <div class="overlay" style="align-content: center">
        <div style="padding-top: 100px">
          <%#= link_to button_tag("Create New Event", class: "btn btn-primary", id: "button_create" ),'#' %>
          <br>
          <br>
          <br>
          <br>
          <%#= link_to button_tag("View My Events", class: "btn btn-primary", id: "button_view"),'/events' %>
        </div>
      </div>
    </div>
    <div class="col-sm-8" id="modDiv1">
      <div class="">
        <p id="notice"><%= notice %></p>

        <h1>Events</h1>

        <table id="eventsTable">
          <thead>
          <tr>
            <th>Eventname</th>
            <th>Eventdate</th>
            <th>Eventlocation</th>
            <th>Eventaddress</th>
            <th>Eventdescription</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.EventName %></td>
              <td><%= event.EventDate %></td>
              <td><%= event.EventLocation %></td>
              <td><%= event.EventAddress %></td>
              <td><%= event.EventDescription %></td>
<!--              <td><%#= link_to 'Show', event %></td>-->
<!--              <td><%#= link_to 'Edit', edit_event_path(event) %></td>-->
<!--              <td><%#= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
            </tr>
          <% end %>
          </tbody>
        </table>


      </div>
    </div>

  </div>
</div>

<%= render 'footer' %>
</body>
</html>