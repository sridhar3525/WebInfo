<style>
  #createuser{
    margin-left: 70px;
    margin-top: 10px;
    font-size: 15px;
  }
    label{
        font-size: 15px;
    }
</style>

<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group row">
  <%= form.label :EventName, for:'formGroup', class:"col-sm-2" %>
  <div class="col-sm-4">
    <%= form.text_field :EventName, id: :event_EventName, class: 'form-control' %>
  </div>
</div>


  <div class="form-group row">
    <%= form.label :EventDate, for:'formGroup',class:"col-sm-2" %>
    <div class="col-sm-4">
      <%= form.date_field :EventDate, id: :event_EventDate, class:'form-control' %>
    </div>
  </div>



  <div class="form-group row">
    <%= form.label :EventLocation, for:'formGroup',class:"col-sm-2" %>
    <div class="col-sm-4">
    <%= form.text_field :EventLocation, id: :event_EventLocation, class:'form-control' %>
    </div>
  </div>



  <div class="form-group row">
    <%= form.label :EventAddress, for:'formGroup',class:"col-sm-2" %>
    <div class="col-sm-4">
      <%= form.text_area :EventAddress, id: :event_EventAddress, class:'form-control' %>
    </div>
  </div>



  <div class="form-group row">
    <%= form.label :EventDescription, for:'formGroup',class:"col-sm-2" %>
    <div class="col-sm-4">
      <%= form.text_area :EventDescription, id: :event_EventDescription, class:'form-control' %>
    </div>
  </div>



  <div class="form-group row">
    <div class="col-sm-4" style="align-content: center;">
      <%= form.submit :'Create Event', class: :"btn btn-primary formElement", id:"createuser" %>
    </div>
  </div>


<% end %>
